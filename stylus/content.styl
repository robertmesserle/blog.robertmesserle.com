#main-content
  position absolute
  top 0
  right 0
  left 220px
  bottom 0
  overflow hidden
  > header
    padding 0
    stripes hsl( 0, 0, 12 ), hsl( 0, 0, 10 )
    position absolute
    top 30px
    left 0
    right 0
    height 75px
    padding 0
    color hsl( 0, 0, 50 )
    position relative
    box-shadow 0 5px 15px rgba( black, 0.025 )
    h1
      font-size 30px
      margin 0
      line-height 75px
      font-family $font
      padding 0 40px
    .toolbar
      position absolute
      right 40px
      top 10px
      bottom 10px
      button
        display inline-block
        float left
        margin-left 20px
        border none
        background transparent
        color hsl( 0, 0, 50 )
        line-height 25px
        position relative
        top 10px
        padding 0
        i
          display block
          font-size 16px
        &:hover:not(:disabled)
          color hsl( 0, 0, 90 )
          cursor pointer
        &.selected
          color hsl( 0, 0, 90 )
      .search-wrapper
        float left
        color hsl( 0, 0, 75% )
        display inline-block
        padding 15px 0 15px 30px
        margin 0 0 0 30px
        box-shadow -1px 0 hsl( 0, 0, 30 )
        i
          display inline-block
        input
          width 220px
          color hsl( 0, 0, 90% )
          border-width 0 0 1px 0
          border-color hsl( 0, 0, 50% )
          border-style solid
          background transparent
          box-shadow none
          font-size 18px
          font-family $font
          font-weight 100
          outline none
          height 25px
          line-height 25px

  .section-wrapper
    position absolute
    top 105px
    left 0
    right 0
    bottom 0
    overflow auto
    padding 40px
    .column-layout
      column-width 500px
      column-gap 20px
      article
        column-break-inside avoid
    article
      width 842px
      padding 20px 20px 20px 120px
      border 1px solid hsl( 0, 0, 85% )
      border-radius 3px
      background linear-gradient( white, hsl( 0, 0, 99 ) )
      box-shadow 3px 3px 6px rgba( black, 0.05 )
      position relative
      margin-bottom 40px
      > i
        stripes hsl( 200, 80, 53 ), hsl( 200, 80, 50 )
        position absolute
        top -10px
        left 20px
        bottom -5px
        font-size 60px
        text-align center
        width 80px
        padding-top 10px
        display block
        color white
        text-shadow 0 0 10px rgba( white, 0.8 )
        border-radius 0 0 5px 5px
        box-shadow 2px 2px 5px rgba( black, 0.25 )
        &::after
          content ''
          right -10px
          border-width 5px
          border-style solid
          width 0
          height 0
          position absolute
          border-color transparent transparent hsl( 200, 80, 15 ) hsl( 200, 60, 20 )
          top 0
        &:not([class^="icon-"])
          font-family $alt-font
          font-style normal
          font-weight bold
      header
        position relative
        margin 0 0 15px
        h1
          margin 0
        h2
          margin 0
          padding 0
          font-size 14px
          text-align right
          font-weight 100
          border none
          color hsl( 0, 0, 70 )
      footer
        clearfix()
        margin 15px 0 0
        padding 15px 0 0
        border-top 1px solid hsl( 0, 0, 90 )
        .tags
          float left
          max-width 550px
        nav
          float right
          .like_button
          .reblog_button
            float left
            margin-right 10px
      h1
        font-size 30px
        font-weight 100
        margin 0 0 20px
        color hsl( 200, 80, 55 )
        border-bottom 1px solid hsl( 0, 0, 90 )
        text-shadow 1px 1px 2px rgba( black, 0.125 )
      h2
        font-size 24px
        font-weight 100
        margin 0
        border-bottom 1px solid hsl( 0, 0, 95 )
      p
        color #999
      p, li, dt, dd
        font-family $alt-font
        font-weight normal
        font-size 14px
        line-height 1.5em
      dl
        dt, dd
          border-left 10px #ddd solid
          margin 0
          padding 0 10px
        dt
          font-family 'Century Gothic', sans-serif
          text-transform uppercase
          font-weight 100
          font-size 16px
          color hsl( 0, 0, 60 )
        dd
          margin-bottom 20px
          color #999
        &.important
          dt, dd
            border-color hsl( 200, 50%, 80% )
          dt
            color $blue
      &.link
        > i
          stripes hsl( 25, 80, 55 ), hsl( 25, 80, 50 )
        h1, a
          color hsl( 25, 80, 55 )
        h1
          a
            text-decoration none
            &::after
              font 0.5em FontAwesome
              content '\F08E'
              padding-left 1em
              position relative
              top -0.2em
      &.quote
        > i
          stripes hsl( 85, 80, 55 ), hsl( 85, 80, 50 )
        h1, a
          color hsl( 85, 80, 55 )
        h2
          &.source
            border-bottom none
            text-align right
            font-size 16px
      &.video
        > i
          stripes hsl( 0, 80, 55 ), hsl( 0, 80, 50 )
        h1, a
          color hsl( 0, 80, 55 )
        iframe
          display block
          margin 0 auto